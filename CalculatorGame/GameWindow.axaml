<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CalculatorGame.GameWindow"
             Background="#242424">
    <StackPanel>
        <TextBlock HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   FontSize="100" 
                   Padding="20" 
                   Name="ExprBlock">500x200</TextBlock>
        <TextBox Watermark="0" 
                 Width="200" 
                 Margin="10 100 0 0" 
                 Padding="20 20 20 20"
                 FontSize="40"
                 Name="Result"
                 KeyDown="InputTextBox_KeyDown"/>
        
        <TextBlock FontSize="20" HorizontalAlignment="Center" Padding="20" IsVisible="False" Name="ResultText">
            Time : 1000s, Good Answers : 100, Average Time : 10s, Amount : 100
        </TextBlock>
        
        <Button Background="#1f6aa5" 
                HorizontalAlignment="Center" 
                IsVisible="False" 
                IsEnabled="False" 
                Name="ToMenu"
                Click="GetToMenu">
            Back To Menu
        </Button>
    </StackPanel>
</UserControl>
